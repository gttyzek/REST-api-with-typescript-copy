<%- include('./partials/head.ejs') %>
    <title>BMart | <%= title %></title>
<body>
<%- include('./partials/nav.ejs') %>

        <div class="selectBook d-flex justify-content-center" style="background-color: rgba(255, 255, 255, 0.199); height: 500px; width: 100%;">
            <div class="d-inline-block mt-5">
                <img style="height: 600px; background-color: none" src="<%= book.images %>">
            </div>
            <div class="style d-inline-block mt-5">
                <h2 class="">Book Details</h2><br>
                <ul class="list-group list-group-flush">
                    <!-- <li class="list-group-item">ID: <%= book._id %></li> -->
                    <li class="list-group-item">Title: <%= book.title %></li>
                    <li class="list-group-item">Description: <%= book.description %></li>
                    <li class="list-group-item">Year: <%= book.datePublished %></li>
                    <li class="list-group-item">Page Count: <%= book.pageCount %></li>
                    <li class="list-group-item">Genre: <%= book.genre %></li>
                    <li class="list-group-item">Publisher: <%= book.publisher %></li>
                </ul><br>
                <h2>Book Summary</h2>
                <p><%= book.bookSummary %>
                    <!-- <em>The Subtle Art Of Not Giving A Fuck</em> delivers a counterintuitive approach to living a good life<br>
