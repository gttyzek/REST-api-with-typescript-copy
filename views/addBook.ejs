<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
    <title>BMart | <%= title %></title>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="registration-form">
        <div class="col text-center py-3">
            <h1 style="font-size: 60px">Add Book</h1>
        </div>
            <form action="/create" method="POST" enctype="multipart/form-data">
                <div class="form-icon">
                    <span><i class="icon icon-user"></i></span>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control item" name="title" id="title" placeholder="Title" >
                </div>
                <div class="form-group">
                    <input type="file" class="form-control item" name="images" id="images" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control item" name="datePublished" id="datePublished" placeholder="Date Published" >
                </div>
                <div class="form-group">
                    <input type="text" class="form-control item" name="description" id="description" placeholder="Description" >
                </div>
                <div class="form-group">
                    <input type="number" class="form-control item" name="pageCount" id="pageCount" placeholder="Page Count" >
                </div>
                <div class="form-group">
                    <input type="text" class="form-control item" id="genre" name="genre" placeholder="Genre" >
                </div>
                <div class="form-group">
                    <input type="text" class="form-control item" id="publisher" name="publisher" placeholder="Publisher" >
                </div>
                <div class="form-group">
                    <textarea class="form-control" id="bookSummary" name="bookSummary" placeholder="Book Summary" ></textarea>
                </div>
                <div class="form-group">
                    <div class="text-center">
                         <button type="submit" id="submit" class="btn btn-primary create-account">Add Book</button>
                         <a href="/books/myBooks" class="btn btn-primary create-account">Back</a>
                    </div>
                </div>
            </form>
        </div>

    <%- include('./partials/footer.ejs') %>
</body>
</html>